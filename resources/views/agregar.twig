{% extends 'layout.twig' %}

{% block jugadores %}

<div class="container-fluid">
    <h1>Agregar Jugador</h1>  
   {% include 'shared/errors.twig' %}  
</div>
   
 <div class="jumbotron mdb-color lighten-2 white-text z-depth-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                    <form method="POST" action="/agregar/jugador">
                        {{ csrf_field() }}
                         <h3> Datos personales </h3>
                        <div class="form-group">
                        <label>Username:</label>
                        <input class="form-control validate" id="username" placeholder="Enter Username" name="username" type="username" autofocus>
                        </div>
                        <div class="form-group">
                        <label>Id jugador:</label>
                        <input class="form-control" id="id_jugador" placeholder="Enter Player ID" name="id_jugador">
                        </div>              
            </div>
            <div class="col-md-4">
             <h3> Vehiculo </h3>
                <div class="form-group">
                <label>Kart:</label>
                <input class="form-control" id="kart" placeholder="Enter Kart" name="kart" required> 
                </div>
                <div class="form-group">
                <label>Ruedas:</label>
                <input class="form-control" id="ruedas" placeholder="Enter Wheels" name="ruedas" required>
                </div>
                <div class="form-group">
                <label>Glider:</label>
                <input class="form-control" id="glider" placeholder="Enter Glider" name="glider" required>
                </div>
            </div>
            <div class="col-md-4">
                   <h3> Fotos </h3>
                        <div class="form-group">
                        <label>Avatar:</label>
                        <input class="form-control" id="avatar" placeholder="Enter Avatar" name="avatar" >
                        </div>
                        <div class="form-group">
                        <label>Foto Personaje:</label>
                        <input class="form-control" id="fotopersonaje" placeholder="Enter Character's Photo" name="fotopersonaje" >
                        </div>
                      
            </div>
        </div>
    </div>
    <div class="container">
         <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-4 col-centered">
                 <button type="submit" class="btn btn-success">Agregar Jugador</button>
                    </form>
                   
            </div>
            <div class="col-md-3"></div>
    </div>
    </div>
</div>
 {% endblock %}