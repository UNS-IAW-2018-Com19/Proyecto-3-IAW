{% extends 'layout.twig' %}

 {% block jugadores %}


 
   
 <div class="jumbotron mdb-color lighten-2 white-text z-depth-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <h1>Agregar Jugador</h1>
                <hr>
                    <form method="POST" action="/jugadores">
                        {{ csrf_field() }}
                        <div class="form-group">
                        <label>Username:</label>
                        <input class="form-control validate" id="username" placeholder="Enter Username" name="username" type="username" required>
                        </div>
                        <div class="form-group">
                        <label>Id jugador:</label>
                        <input class="form-control" id="id_jugador" placeholder="Enter Player ID" name="id_jugador" required>
                        </div>
                        <div class="form-group">
                        <label>Id Equipo:</label>
                        <input class="form-control" id="id_equipo" placeholder="Enter Team ID" name="id_equipo" required>
                        </div>
                        <div class="form-group">
                        <label>Personaje:</label>
                        <input class="form-control" id="personaje" placeholder="Enter Character" name="personaje" required>
                        </div>
                        
                        <h3> Vehiculo </h3>
                        
                        <div class="form-group">
                        <label>Kart:</label>
                        <input class="form-control" id="kart" placeholder="Enter Kart" name="kart" required> 
                        </div>
                        <div class="form-group">
                        <label>Ruedas:</label>
                        <input class="form-control" id="ruedas" placeholder="Enter Wheels" name="ruedas" required>
                        </div>
                        <div class="form-group">
                        <label>Glider:</label>
                        <input class="form-control" id="glider" placeholder="Enter Glider" name="glider" required>
                        </div>

                        <h3> Fotos </h3>

                        <div class="form-group">
                        <label>Avatar:</label>
                        <input class="form-control" id="avatar" placeholder="Enter Avatar" name="avatar" required>
                        </div>
                        <div class="form-group">
                        <label>Foto Personaje:</label>
                        <input class="form-control" id="fotopersonaje" placeholder="Enter Character's Photo" name="fotopersonaje" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Agregar Jugador</button>
                    </form>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <h1>Jugadores actuales</h1>
                {% for jugador in jugadores %}
                    <li> <a>{{jugador.userName}}</a></li>                    
                {% endfor %}
            </div>
        </div>
    </div>
</div>
 {% endblock %}